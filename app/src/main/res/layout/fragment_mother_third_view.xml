<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MotherView">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dr_richard"
        android:layout_width="213dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:gravity="top"
        android:text="About Me"
        android:textStyle="bold"
        android:textAppearance="@style/dr_richard"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.736"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="318dp"
        android:layout_height="211dp"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_marginTop="48dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/dr_richard"
        app:layout_constraintTop_toBottomOf="@+id/dr_richard">

        <TextView
            android:id="@+id/biira_clare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="top"
            android:paddingStart="12dp"
            android:text="@string/biira_clare"
            android:textAppearance="@style/biira_clare" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/next"
        android:layout_width="239dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:gravity="top"
        android:paddingStart="12dp"
        android:text="Next Visit"
        android:textAppearance="@style/biira_clare"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/card_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/card_view"
        app:layout_constraintTop_toBottomOf="@+id/card_view" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view2"
        android:layout_width="323dp"
        android:layout_height="211dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="@+id/next"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/next"
        app:layout_constraintTop_toBottomOf="@+id/next">

        <TextView
            android:id="@+id/biira_clare2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="top"
            android:paddingStart="12dp"
            android:text="23rd july 2021"
            android:textAppearance="@style/biira_clare" />


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>